<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="login.Login"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:background="@color/app">

        <ImageView
            android:id="@+id/btnVolver"
            android:layout_width="64dp"
            android:layout_height="59dp"
            android:padding="10px"
            android:src="@drawable/btn_volver" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@color/app" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:background="@color/app"
                    android:scaleType="centerInside"
                    android:src="@drawable/logo_marfol"
                    />
            </LinearLayout>

        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="vertical"
        android:background="@color/app">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/app">

            <EditText
                android:id="@+id/etCorreo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/borde_correo_interfaces_login"
                android:ems="10"
                android:hint="Correo electrónico"
                android:textColor="@color/black"
                android:textColorHint="@color/letras"
                android:inputType="textEmailAddress"
                android:padding="15dp"
                />

            <EditText
                android:id="@+id/contrasenaInterfaz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/borde_password_interfaces_login"
                android:ems="10"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:hint="Contraseña"
                android:textColor="@color/black"
                android:textColorHint="@color/letras"
                android:inputType="textPassword"
                android:padding="15dp" />

            <Button
                android:id="@+id/btnLogin"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:backgroundTint="@color/botones"
                android:padding="15dp"
                android:text="Login"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:padding="12dp"
                android:clickable="true"
                android:text="Crear cuenta"
                android:id="@+id/btnCrearCuenta"
                android:contextClickable="true"
                android:textAlignment="center"
                android:textColor="@color/letras"
                android:textStyle="bold|italic"/>

            <TextView
                android:id="@+id/btnContrasenaOlvidada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:padding="12dp"
                android:text="¿Contraseña olvidada?"
                android:textAlignment="center"
                android:textColor="@color/letras"
                android:textStyle="bold|italic" />
        </LinearLayout>





    </LinearLayout>
</LinearLayout>