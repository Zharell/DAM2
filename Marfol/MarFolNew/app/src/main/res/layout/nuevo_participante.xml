<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="participantes.NuevoParticipante"
    android:orientation="vertical"
    android:background="@color/app">
    <ImageView
        android:id="@+id/btnVolver"
        android:layout_width="60dp"
        android:layout_height="64dp"
        android:padding="10px"
        android:src="@drawable/btn_volver"/>

    <EditText
        android:id="@+id/etNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nombre *"
        android:inputType="text"
        android:textColor="@color/black"
        android:textColorHint="@color/letras"
        android:layout_margin="15dp"/>

    <EditText
        android:id="@+id/etDescripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_margin="15dp"
        android:textColor="@color/black"
        android:textColorHint="@color/letras"
        android:hint="DescripciÃ³n"
        android:inputType="text" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:background="@color/black" />
    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:src="@drawable/platos"/>

    <TextView
        android:id="@+id/btnNuevoPlato"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:text="+"
        android:layout_marginTop="-10dp"
        android:textColor="@color/letras"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_marginBottom="30dp"
        android:background="@color/botones" />
    <ImageView
        android:id="@+id/btnAnadirParticipante"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:src="@drawable/anadir"
        />
</LinearLayout>